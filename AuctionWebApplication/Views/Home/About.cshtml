@model AuctionService.AuctionItem;
@{
    ViewData["Title"] = "Bid";
}
<h2>Bid</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BidCustomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidCustomPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidTimestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.BidCustomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.BidCustomPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.BidPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.BidTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.ItemNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.RatingPrice)
            </td>
        </tr>
    </tbody>
</table>

@using(Html.BeginForm("Bid", "Home", new { enctype = "multipart/form-data", onsubmit = "return validateTagInput()" })) {
    <p>
        Item number: <input type="text" name="itemNumber" value="@Model.ItemNumber">
        Name: <input pattern="[A-Za-z]{4,}" required title="Your name needs to be atleast 4 characters long" type="text" name="bidCustomName">
        Phonenumber: <input pattern="[0-9]{8}" required title="Your phone number needs to be 8 characters" type="text" name="bidCustomPhone">
        Bid amout: <input type="text" name="bidPrice">
        <input type="submit" id="btn" value="Bid">
    </p>
}